{
  "name": "frontend_dashboard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "env:dev": "node scripts/switch-env.js dev",
    "env:staging": "node scripts/switch-env.js staging",
    "env:prod": "node scripts/switch-env.js prod",
    "env:status": "node scripts/env-status.js",
    "env:validate": "node scripts/validate-env.js",
    "env:validate:connectivity": "node scripts/validate-env.js --test-connectivity",
    "build:dev": "bash scripts/build-dev.sh",
    "build:staging": "bash scripts/build-staging.sh",
    "build:prod": "bash scripts/build-prod.sh",
    "deploy:dev": "npm run build:dev && npm run start",
    "deploy:staging": "npm run build:staging && npm run start",
    "deploy:prod": "npm run build:prod && npm run start"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.15",
    "antd": "^5.27.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "lucide-react": "^0.539.0",
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
