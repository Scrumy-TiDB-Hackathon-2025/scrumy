{
  "name": "scrumbot-chrome-extension",
  "version": "1.0.0",
  "description": "ScrumBot Chrome Extension for AI-powered meeting transcription",
  "scripts": {
    "dev": "node start-dev-servers.js",
    "test": "node quick-test.js",
    "test:full": "node run-all-tests.js",
    "test:enhanced": "echo 'Load extension and run window.testEnhancedFeatures() in meeting tab'",
    "test:ws": "node mocks/mockwebsocketserver.js",
    "test:rest": "node mocks/mockrestserver.js",
    "test:core": "node test/core.js",
    "env:dev": "node switch-env.js dev",
    "env:prod": "node switch-env.js prod",
    "mocks:start": "node mocks/start-mock-servers.js",
    "mocks:stop": "node mocks/start-mock-servers.js --stop",
    "mocks:status": "node mocks/start-mock-servers.js --status",
    "mocks:test": "node mocks/test-mock-servers.js",
    "mocks:test:ws": "node mocks/test-mock-servers.js --websocket-only",
    "mocks:test:rest": "node mocks/test-mock-servers.js --rest-only"
  },
  "dependencies": {
    "ws": "^8.18.3"
  },
  "devDependencies": {},
  "keywords": [
    "chrome-extension",
    "meeting",
    "transcription",
    "ai"
  ],
  "author": "ScrumBot Team",
  "license": "MIT"
}
