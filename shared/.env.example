# Shared Environment Configuration Template
# Copy to .tidb.env and fill in your credentials

# =============================================================================
# DEBUG CONFIGURATION
# =============================================================================
DEBUG_LOGGING=false  # Set to 'true' only for development/debugging

# =============================================================================
# TIDB CONNECTION
# =============================================================================
TIDB_CONNECTION_STRING=mysql://username:password@gateway01.us-west-2.prod.aws.tidbcloud.com:4000/database

# =============================================================================
# AI PROCESSING
# =============================================================================
GROQ_API_KEY=gsk_your_groq_api_key_here

# =============================================================================
# NOTION CONFIGURATION
# =============================================================================
NOTION_TOKEN=ntn_your_notion_integration_token
NOTION_DATABASE_ID=your_database_id_here
NOTION_WORKSPACE_NAME="Your Workspace Name"

# =============================================================================
# CLICKUP CONFIGURATION
# =============================================================================
CLICKUP_TOKEN=pk_your_clickup_api_token
CLICKUP_LIST_ID=your_list_id_here
CLICKUP_TEAM_ID=your_team_id_here
CLICKUP_WORKSPACE_NAME="Your ClickUp Workspace"

# =============================================================================
# SLACK CONFIGURATION
# =============================================================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
MAX_CONCURRENT_MEETINGS=100
MEMORY_LIMIT_PER_MEETING_MB=1
SESSION_CLEANUP_INTERVAL_MINUTES=30
SESSION_TIMEOUT_HOURS=2